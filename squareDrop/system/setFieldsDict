FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.water 0
);

regions
(
 boxToCell // Droplet position and size
    {
        box (0.003505 0.003505  0) (0.006505 0.006505 0.01);
        fieldValues
        (
            volScalarFieldValue alpha.water 1
        );
    }

 );
